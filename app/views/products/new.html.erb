<%= form_for :product, url: products_path do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= collection_select(:product, :category_id, @categories, :id, :name, {:prompt => 'Select Product Category'})  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
