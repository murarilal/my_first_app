<%= form_for @article, :html => { :class => 'form-horizontal' } do |f| %>
    
  <% if params[:preview_button] %>
    <dl class="dl-horizontal">
      <dt><strong>Title</strong></dt>
      <dd><%= @article.title %></dd>
      <dt><strong>Text</strong></dt>
      <dd><%= @article.text %></dd>
      <dt><strong>Image</strong></dt>
      <dd><%= image_tag @article.image_url(:thumb) %></dd>
  <% end %>
  
  <div class="control-group">
    <%= f.label :tag_list, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tag_list, :class => 'text_field' %>
    </div>
  </div>
   
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :text, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :image, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    
    <%= submit_tag 'Preview', :name => 'preview_button' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                articles_path, :class => 'btn' %>
  </div>
<% end %>
